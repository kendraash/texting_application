<%= render 'form' %>

<h2>Messages</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th>To</th>
      <th>From</th>
      <th>Message</th>
    </tr>
  </thead>
  <tbody>
<% @messages.each do |message| %>
    <tr>
      <td><%= message.to %></td>
      <td><%= message.from %></td>
      <td><%= message.body %></td>
    </tr>
<% end %>
  </tbody>
</table>
